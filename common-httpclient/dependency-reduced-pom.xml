  <modelVersion>4.0.0</modelVersion>
  <artifactId>common-httpclient</artifactId>
  <name>Connectors SE :: Common :: http-client</name>
  <description>A Talend client HTTP based that clearly expose what is supported. It Provides one implemetation based on cxf.</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <id>shade-cxf-in-common-httpclient</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <createDependencyReducedPom>true</createDependencyReducedPom>
              <useDependencyReducedPomInJar>true</useDependencyReducedPomInJar>
              <promoteTransitiveDependencies>true</promoteTransitiveDependencies>
              <createSourcesJar>true</createSourcesJar>
              <shadeSourcesContent>true</shadeSourcesContent>
              <relocations>
                <relocation>
                  <pattern>org.apache.cxf</pattern>
                  <shadedPattern>org.talend.components.common.httpclient.shaded.org.apache.cxf</shadedPattern>
                </relocation>
              </relocations>
              <artifactSet>
                <includes>
                  <include>org.apache.cxf:cxf-core</include>
                  <include>org.apache.cxf:cxf-rt-rs-client</include>
                  <include>org.apache.cxf:cxf-rt-transports-http</include>
                  <include>org.apache.cxf:cxf-rt-frontend-jaxrs</include>
                  <include>org.apache.cxf:cxf-rt-security</include>
                </includes>
              </artifactSet>
              <transformers>
                <transformer />
                <transformer />
              </transformers>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>org.talend.tools.mojo</groupId>
            <artifactId>shade-cxf-trtransformer</artifactId>
            <version>1.0-SNAPSHOT</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>
  <dependencies>
